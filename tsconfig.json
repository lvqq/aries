{
  "compilerOptions": {
    "target": "esnext",                
    "lib": ["esnext"],
    "types": ["node"],
    "module": "esnext",
    "noEmit": true,
    "declaration": true, 
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "bin", "__tests__"],
  "exclude": ["__tests__/output.*/**/*"]
}
