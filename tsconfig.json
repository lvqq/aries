{
  "compilerOptions": {
    "target": "es6",                
    "lib": ["es5", "es6", "esnext"],
    "types": ["node"],
    "module": "es2020",
    "noEmit": true,
    "declaration": true, 
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist"
  },
  "include": ["src", "bin", "__tests__"],
  "exclude": ["__tests__/output.*/**/*"]
}
