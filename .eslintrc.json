{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 13
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "import/no-dynamic-require": 0,
    "global-require": 0,
    "max-len": ["warn", { "code": 120, "ignoreComments": true, "tabWidth": 2 }],
    "no-unused-vars": 1,
    "class-methods-use-this": 0,
    "no-console": 0
  }
}
